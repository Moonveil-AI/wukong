{
  "name": "@wukong/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Wukong Agent Library - A powerful TypeScript agent framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/wukong.git"
  },
  "license": "MIT",
  "author": "Your Name",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "test": "cross-env VITE_CJS_IGNORE_WARNING=true vitest run",
    "posttest": "bash scripts/cleanup-processes.sh --vitest-only",
    "test:watch": "cross-env VITE_CJS_IGNORE_WARNING=true vitest",
    "test:ci": "cross-env VITE_CJS_IGNORE_WARNING=true vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r run typecheck",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "clean:processes": "bash scripts/cleanup-processes.sh",
    "clean:processes:force": "bash scripts/cleanup-processes.sh --force",
    "clean:vitest": "bash scripts/cleanup-processes.sh --vitest-only",
    "prepare": "pnpm build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.17.6",
    "cross-env": "^10.1.0",
    "jsdom": "^25.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0"
  }
}
