{
  "name": "@wukong/adapter-local",
  "version": "0.1.0",
  "description": "Local adapter for Wukong (SQLite + file system)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist", "migrations"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "migrate": "tsx src/cli/migrate.ts migrate",
    "migrate:status": "tsx src/cli/migrate.ts status"
  },
  "dependencies": {
    "@wukong/agent": "workspace:*",
    "better-sqlite3": "^11.8.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.17.6",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "keywords": ["sqlite", "local", "adapter", "wukong"],
  "license": "MIT"
}
